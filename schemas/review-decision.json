{
  "type": "object",
  "properties": {
    "verdict": {
      "type": "string",
      "enum": ["approved", "needs_revision"]
    },
    "feedback": {
      "type": "string",
      "description": "Brief summary if approved. Specific issues if needs_revision."
    },
    "issues": {
      "type": "array",
      "description": "Present only when needs_revision.",
      "items": {
        "type": "object",
        "properties": {
          "file": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "minor"]
          },
          "description": { "type": "string" }
        },
        "required": ["file", "severity", "description"],
        "additionalProperties": false
      }
    }
  },
  "required": ["verdict", "feedback", "issues"],
  "additionalProperties": false
}
